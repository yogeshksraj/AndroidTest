<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable name="factsModel" type="com.example.applist.model.FactsModel"/>
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dimen_16">

        <ImageView
                android:layout_width="@dimen/dimen_140"
                android:layout_height="@dimen/dimen_100"
                app:srcCompat="@drawable/placeholder"
                android:id="@+id/imageView"
                app:layout_constraintEnd_toStartOf="@+id/tv_next"
                android:layout_marginEnd="@dimen/dimen_8"
                app:layout_constraintTop_toTopOf="@+id/tv_description"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_next"
                android:drawableEnd="@drawable/ic_next"
                app:layout_constraintEnd_toEndOf="@+id/tv_title"
                android:layout_marginBottom="@dimen/dimen_8"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="@dimen/dimen_8"
                app:layout_constraintHorizontal_bias="1.0"/>
        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/tv_description"
                tools:text="Description"
                android:text="@{factsModel.description}"
                app:layout_constraintStart_toStartOf="@+id/tv_title"
                app:layout_constraintTop_toBottomOf="@+id/tv_title"
                android:layout_marginEnd="@dimen/dimen_8"
                app:layout_constraintEnd_toStartOf="@+id/imageView"/>
        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/tv_title"
                tools:text="Title"
                android:text="@{factsModel.title}"
                android:textColor="@color/colorDarkBlue"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>